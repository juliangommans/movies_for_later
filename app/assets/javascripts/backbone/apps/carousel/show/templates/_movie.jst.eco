<% if @backdrop_path?: %>
<img src="http://image.tmdb.org/t/p/w780<%= @backdrop_path %>" class='carousel-images'>
<% else if @poster_path: %>
<img src="http://image.tmdb.org/t/p/w342<%= @poster_path %>" class='carousel-images'>
<% end %>
<div class="carousel-caption">
  <h3><%= @title %></h3>
  <p><%= @overview %></p>
</div>
